
<% title 'Main Page' %>
<div class="container">

<div class="center hero-unit">
<h1>Listing gists</h1>
<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Snippet</th>
      <th>Lang</th>
      <th>Description</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @gists.each do |gist| %>
      <tr class="info">
        <td><%= raw Pygments.highlight(gist.snippet, lexer: gist.lang) %></td>
       <!--  <td><%= gist.snippet%></td> -->
        <td><%= gist.lang %></td>
        
        <td><%= gist.description %></td>
        <td><%= gist.date %></td>
        <td><%= link_to 'Show', gist, class:'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_gist_path(gist), class:'btn btn-default' %></td>
        <td><%= link_to 'Destroy', gist, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gist', new_gist_path, class: 'btn btn-large btn-default' %>
</div>
</div>