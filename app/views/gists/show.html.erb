<div class="hero-unit">
<p id="notice"><%= notice %></p>

<p>
  <strong>Snippet:</strong>
  
</p>
<%= raw Pygments.highlight(@gist.snippet, lexer: @gist.lang) %>

<p>
  <strong>Lang:</strong>
  <%= @gist.lang %>
</p>

<p>
  <strong>Description:</strong>
  <%= @gist.description %>
</p>

